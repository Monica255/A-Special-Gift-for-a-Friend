<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="15dp"
    tools:context=".EighthWishesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_wish1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:alpha="0"
            android:gravity="center_horizontal"
            android:text="Dear friend, allow me to say a few words"
            android:textSize="20dp"
            android:textStyle="italic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_wish2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:alpha="0"
            android:gravity="center_horizontal"
            android:text="On this special date
\nYour parents cherished your presence"
            android:textSize="20dp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/tv_wish1" />

        <TextView
            android:id="@+id/tv_wish3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:alpha="0"
            android:gravity="center_horizontal"
            android:text="July 4th 2001 \nnothing special about the date
\nbut for them, it was a day packed of happiness"
            android:textSize="20dp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/tv_wish2" />

        <TextView
            android:id="@+id/tv_wish4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:alpha="0"
            android:gravity="center_horizontal"
            android:text="An angle descended from the sky
\nIn a form of a little girl"
            android:textSize="20dp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/tv_wish3" />

        <TextView
            android:id="@+id/tv_wish5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:alpha="0"
            android:gravity="center_horizontal"
            android:text="and they named her Elisabeth Tyas"
            android:textSize="20dp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/tv_wish4" />

        <Button
            android:id="@+id/bt_next"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:alpha="0"
            android:background="@android:color/transparent"
            android:text="Next"
            android:textAllCaps="false"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_wish5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>